{
  "name": "react-component-library-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for building your own React component library.",
  "main": "dist/bundle.js",
  "scripts": {
    "build:lib": "node ./node_modules/webpack/bin/webpack --watch -p --progress --config webpack.config.lib.js",
    "build:umd": "node ./node_modules/webpack/bin/webpack --watch -p --progress --config webpack.config.umd.js",
    "run": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "cosmos": "node ./node_modules/react-cosmos/bin/cosmos",
    "cosmos:export": "node ./node_modules/react-cosmos/bin/cosmos-export"
  },
  "author": "Jason Price",
  "license": "MIT",
  "dependencies": {
    "react": "^16.3.2",
    "react-cosmos": "^3.7.1",
    "react-radio-group": "^3.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-react-css-modules": "^3.3.3",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "css-loader": "^0.28.11",
    "directory-named-webpack-plugin": "^4.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^3.2.0",
    "react-transform-catch-errors": "^1.0.2",
    "react-transform-hmr": "^1.0.4",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.2"
  }
}
